<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
		<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
				<encoder>
						<pattern>%d [%t] %-5p [%c] - %m%n</pattern>
				</encoder>
		</appender>
		<root level="debug">
				<appender-ref ref="Console" />
		</root>
</configuration>